<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_5">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_author"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img"
        android:layout_marginTop="20dp"
        android:text="作者"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:text="公众号"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/color_0099ff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        android:gravity="center"
       android:layout_below="@id/img"
        android:textSize="15dp"
        android:text="我锁了解的dadalkdnlsdnf"
        android:layout_centerHorizontal="true"
        />
<CheckBox
    android:id="@+id/img2"
    android:layout_below="@id/t3"
    android:layout_margin="@dimen/dp_10"
    android:button="@null"
    android:background="@drawable/select_checkbox"
    android:layout_width="@dimen/dp_40"
    android:layout_height="@dimen/dp_40"/>
    <ImageView
        android:layout_width="@dimen/dp_29"
        android:layout_height="@dimen/dp_29"
        android:id="@+id/img3"
        android:layout_toRightOf="@id/img2"
        android:layout_below="@id/t3"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@mipmap/shizhong"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t4"
        android:text="一天前"
        android:layout_below="@id/t3"
        android:layout_toRightOf="@id/img3"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/t6"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:text="项目"
            android:background="@drawable/text_biankuang2"
            android:layout_below="@id/t3"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_240"
            android:textColor="@color/color_ff6600"
            android:textSize="@dimen/dp_13"
            android:gravity="center"/>
        <TextView
            android:id="@+id/t5"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_20"
            android:text="新"
            android:background="@drawable/text_biankuang"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"

            android:textColor="@color/color_00cc00"
            android:textSize="@dimen/dp_13"
            android:gravity="center"/>

</LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
